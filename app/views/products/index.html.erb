<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">
          <i class="fas fa-search"></i>
        </span>
      </div>
      <input type="text" class="form-control" placeholder="Busca un producto aquÃ­..." id="buscar" >
    </div>
  </div>
</div>
<div class="row" id="products">
  <%= render @products %> <!-- Esto renderiza una vista del mismo nombre pero en singular -->
</div>
<script>

  $('#buscar').keyup(function() {

    $.ajax({
      url: '<%= products_path %>',
      type: 'GET',
      dataType: 'script',
      data: {buscar: $('#buscar').val()}
    })
    .done(function() {
      console.log("success");
    })
    .fail(function() {
      console.log("error");
    });

  });

</script>
