<% @products.each do |product| %>
  <div class="col-md-3 mt-md-5">
    <div class="card text-center" style="margin-top ;">
      <%= image_tag product.photo, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text">$<%= product.price %></p>
        <a href="<%= product_orders_path(product) %>" class="btn btn-primary" data-method="post"><i class="fas fa-cart-arrow-down btn-primary"></i></a>
      </div>
    </div>
  </div>
<% end %>
